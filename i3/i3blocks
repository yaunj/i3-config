# i3blocks config file

# Global properties
separator_block_width=15

[windowname]
command=xprop -id $(xprop -root | awk '/_NET_ACTIVE_WINDOW.WINDOW/ {print $NF}') | grep _NET_WM_NAME | sed -e 's/[^"]*"\(.*\)"/\1/'
color=#ababab
interval=1

[displays]
command=~/.config/i3/blocks/grobi  # display
color=#ffff00
interval=once
signal=8

[volume]
label=ðŸ”‰
#label=VOL
instance=Master
#instance=PCM
command=/usr/share/i3blocks/volume
interval=once
signal=10

[memory]
label=MEM
command=/usr/share/i3blocks/memory
interval=30

[nmcli]
command=~/.config/i3/blocks/nmcli
interval=30

[ethernet]
label=E
instance=eth0
#instance=enp0s25
command=/usr/share/i3blocks/iface
color=#00FF00
interval=10

[battery]
#label=BAT
label=ðŸ”‹
command=/usr/share/i3blocks/battery
interval=30

[time]
command=~/.config/i3/blocks/i3-clock
interval=5
